<resources>
    <declare-styleable name="SurfaceDuoLayout">
        <attr name="single_screen_layout_id" format="integer" />
        <attr name="dual_screen_start_layout_id" format="integer" />
        <attr name="dual_screen_end_layout_id" format="integer" />
        <!-- Single container for Dual Screen-->
        <attr name="dual_portrait_single_layout_id" format="integer" />
        <attr name="is_dual_portrait_single_container" format="boolean" />
        <attr name="dual_landscape_single_layout_id" format="integer" />
        <attr name="is_dual_landscape_single_container" format="boolean" />
        <!-- Preview -->
        <attr name="show_in_single_screen" format="integer" />
        <attr name="show_in_dual_screen_start" format="integer" />
        <attr name="show_in_dual_screen_end" format="integer" />
        <attr name="show_in_dual_portrait_single_container" format="integer" />
        <attr name="show_in_dual_landscape_single_container" format="integer" />
        <attr name="tools_hinge_color" format="enum">
            <enum name="black" value="0" />
            <enum name="white" value="1" />
        </attr>
        <attr name="tools_screen_mode" format="enum">
            <enum name="single_screen" value="0" />
            <enum name="dual_screen" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SurfaceDuoFrameLayout">
        <attr name="display_position" />
        <attr name="tools_application_mode" />
    </declare-styleable>
</resources>